{
  // gRPC client configuration for communicating with the server
  "WorkflowClientOptions": {
    // Maximum number of retry attempts for failed gRPC calls
    // Retries occur for transient failures (network issues, timeouts)
    "MaxRetryAttempts": 3,
    
    // Initial delay in milliseconds before the first retry attempt
    // Subsequent retries use exponential backoff
    "InitialRetryDelayMs": 100,
    
    // Maximum delay in milliseconds between retry attempts
    // Prevents exponential backoff from becoming too long
    "MaxRetryDelayMs": 1000,
    
    // Timeout in seconds for individual gRPC requests
    // Requests exceeding this duration will be cancelled
    "RequestTimeoutSeconds": 30
  },
  
  // Server connection settings
  "Server": {
    // Base URL of the gRPC server
    // In production, update to actual server URL (e.g., "https://api.ect.af.mil")
    // In .NET Aspire, this is automatically configured via service discovery
    "ServerUrl": "https://localhost:7000"
  }
}