@page "/"
@using AF.ECT.Shared

<PageTitle>Application Logs</PageTitle>

<h1>Application Logs</h1>

<p>View and manage system logs with pagination, filtering, and sorting.</p>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<RadzenDataGrid Data="@logData" TItem="LogItem" 
                LoadData="@LoadDataAsync" 
                IsLoading="@isLoading" 
                AllowFiltering="true" 
                AllowSorting="true" 
                AllowPaging="true" 
                PageSize="10" 
                Count="@totalCount"
                FilterMode="FilterMode.Advanced">
    <Columns>
        <RadzenDataGridColumn TItem="LogItem" Property="LogId" Title="Log ID" Width="100px" Filterable="false" />
        <RadzenDataGridColumn TItem="LogItem" Property="ProcessName" Title="Process Name" Width="200px" />
        <RadzenDataGridColumn TItem="LogItem" Property="ExecutionDate" Title="Execution Date" Width="180px" Filterable="false" />
        <RadzenDataGridColumn TItem="LogItem" Property="Message" Title="Message" />
    </Columns>
</RadzenDataGrid>
