{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (Blazor AppHost)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/AF.ECT.AppHost/bin/Debug/net9.0/AF.ECT.AppHost.dll",
            "args": [],
            "cwd": "${workspaceFolder}/AF.ECT.AppHost",
            "stopAtEntry": false,
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "Attach to Blazor WebAssembly (Chrome)",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}/AF.ECT.Client",
            "browser": "chrome",
            "url": "http://localhost:5173",
            "timeout": 60000,
            "webRoot": "${workspaceFolder}/AF.ECT.Client/wwwroot",
            "trace": true
        },
        {
            "name": "Attach to Blazor WebAssembly (Edge)",
            "type": "blazorwasm",
            "request": "attach",
            "cwd": "${workspaceFolder}/AF.ECT.Client",
            "browser": "edge",
            "url": "http://localhost:5173",
            "timeout": 60000,
            "webRoot": "${workspaceFolder}/AF.ECT.Client/wwwroot",
            "trace": true
        },
        {
            "name": "Debug Blazor Server + Client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/AF.ECT.Server/bin/Debug/net9.0/AF.ECT.Server.dll",
            "args": [],
            "cwd": "${workspaceFolder}/AF.ECT.Server",
            "stopAtEntry": false,
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": ".NET Launch (Blazor Client)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": ["run", "--project", "${workspaceFolder}/AF.ECT.Client/AF.ECT.Client.csproj"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "serverReadyAction": {
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "openExternally"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": ".NET Launch (WinUI App)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "dotnet",
            "args": ["run", "--project", "${workspaceFolder}/AF.ECT.Windows/AF.ECT.Windows.csproj", "--launch-profile", "AF.ECT.Windows (Unpackaged)"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ],
    "compounds": []
}